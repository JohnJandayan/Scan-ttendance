{
  "name": "scan-ttendance-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest --coverage",
    "test:performance": "vitest --run --reporter=verbose src/test/performance",
    "test:all": "tsx src/test/test-runner.ts",
    "test:unit": "tsx src/test/test-runner.ts unit",
    "test:integration": "tsx src/test/test-runner.ts integration",
    "test:integration:full": "tsx scripts/run-integration-tests.ts",
    "test:e2e:comprehensive": "playwright test e2e/comprehensive-integration.spec.ts",
    "test:e2e:load": "playwright test e2e/load-testing.spec.ts",
    "test:e2e:security": "playwright test e2e/security-validation.spec.ts",
    "deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:production": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -Production",
    "deploy:skip-tests": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -SkipTests",
    "env:validate": "tsx -e \"import('./src/lib/env-validation.ts').then(m => console.log('âœ… Environment validation passed'))\"",
    "env:info": "tsx scripts/env-info.ts",
    "health": "curl -f http://localhost:3000/api/health || echo 'Health check failed'",
    "vercel:env": "vercel env ls",
    "vercel:logs": "vercel logs",
    "analyze": "cross-env ANALYZE=true npm run build",
    "verify:deployment": "tsx scripts/verify-deployment.ts",
    "verify:supabase": "tsx scripts/verify-supabase.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
